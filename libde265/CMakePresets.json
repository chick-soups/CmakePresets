{
    "version": 8,
    "configurePresets": [
        {
            "name": "arm64-android",
            "displayName": "arm64-android",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-24",
                "ANDROID_NDK": "$env{ANDROID_NDK_HOME}",
                "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                "CMAKE_INSTALL_PREFIX": "D:/libraries/${presetName}/libde265"
            }
        },
        {
            "name": "x64-windows",
            "displayName": "Visual Studio 生成工具 2022 Release - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "D:/libraries/libde265/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-windows-debug",
            "displayName": "Visual Studio 生成工具 2022 Release - amd64 - Debug",
            "configurePreset": "x64-windows",
            "configuration": "Debug"
        }
    ]
}