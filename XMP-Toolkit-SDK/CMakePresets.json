{
    "version": 8,
    "configurePresets": [
        {
            "name": "x64-windows",
            "displayName": "x64-windows",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS":"-fexceptions",
                "XMP_BUILD_STATIC":"OFF",
                "CMAKE_CONFIGURATION_TYPES":"Release"
   
            }
        },
      {
            "name": "arm64-android",
            "displayName": "arm64-android",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM":"android-24",
                "ANDROID_NDK":"$env{ANDROID_NDK_HOME}",
                "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                "CMAKE_INSTALL_PREFIX": "D:/libraries/${presetName}/XMP-TOOLKIT-SDK",
                "ANDROID":true,
                "CMAKE_CXX_FLAGS":"-fexceptions",
                "XMP_BUILD_STATIC":"OFF",
                "ANDROID_STL":"c++_shared",
                "ANDROID_NATIVE_API_LEVEL":"24"
            }
        }
    ]
}