{
    "version": 8,
    "configurePresets": [
        {
            "name": "x64-windows",
            "displayName": "Visual Studio 生成工具 2022 Release - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "D:/libraries/libpng/${presetName}",
                "ZLIB_ROOT": "D:/libraries/zlib/${presetName}"
            }
        },
        {
            "name": "arm64-android",
            "generator": "Ninja",
            "inherits": "x64-windows",
            "cacheVariables": {
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-24",
                "ANDROID_NDK": "$env{ANDROID_NDK_HOME}",
                "ANDROID_STL": "c++_shared",
                "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-windows-Release",
            "displayName": "Visual Studio 生成工具 2022 Release - amd64 - Release",
            "configurePreset": "x64-windows",
            "configuration": "Release"
        },
        {
            "name": "arm64-android-build",
            "configurePreset": "arm64-android",
            "configuration": "Release"
        }
    ]
}